<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.taskmanager.app"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_assignee_text"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.taskmanager.widgets.RobotoTextView
        android:id="@+id/TagNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="3dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:font="roboto_regular" />

    <ImageView
        android:id="@+id/TagPhotoImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/image_bg" />

</LinearLayout>