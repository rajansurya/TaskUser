<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SCROLLER_ID"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_left_menu"
    android:scrollbars="vertical"
    android:weightSum="100" >
<!-- android:background="@drawable/menu_bg_new1" -->
    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="250dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
            android:id="@+id/contactwiselinear"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_weight="9.5"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:text="@string/contactwisetxt"
                android:textColor="@color/grey_menue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_darkgra" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/contactReceive"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="6.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/contact_recieved"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/contact_recieved"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/recievedTaskId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/contact_recieved"
                        android:text="@string/contactreceive"
                        android:textColor="@color/grey_menue"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/contactreceiveIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checked"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lite_grayline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactAssigned"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/contact_assigned"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/contact_assigned"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/assignedTaskId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/contact_assigned"
                    android:text="@string/contactAssign"
                    android:textColor="@color/grey_menue"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lite_grayline" />

        <LinearLayout
            android:id="@+id/contactAssignedHash"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/contact_assignedHash"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/contact_assigned"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/assignedTaskIdHash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/contact_assignedHash"
                    android:text="# (Categories)"
                    android:textColor="@color/grey_menue"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_weight="9.5"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingLeft="9dp"
                android:text="@string/sortonlablet"
                android:textColor="@color/grey_menue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_darkgra" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/namewiselinear"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="6.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/sort_date_name"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/sort_name"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/namewisetxtId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/sort_date_name"
                        android:text="@string/namewisetxt"
                        android:textColor="@color/grey_menue"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/namewisesorticon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checked"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lite_grayline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/datewiselinear"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="6.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/sort_date_calander"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/sort_date_calander"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/atewisetxtId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/sort_date_calander"
                        android:text="@string/datewisetxt"
                        android:textColor="@color/grey_menue"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/datewisesorticon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/checked"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lite_grayline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prioritywiselinear"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/sort_date_calander1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/sort_date_calander"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/prioritywisetxtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/sort_date_calander1"
                    android:text="@string/prioritywisetxt"
                    android:textColor="@color/grey_menue"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/prioritywisesorticon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/checked"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_weight="9.5"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:gravity="bottom"
                android:text="@string/viewtasklable"
                android:textColor="@color/grey_menue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_darkgra" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/openfilterlinear"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="9.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/contact_open"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/contact_open"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/openTaskId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/contact_open"
                        android:text="@string/open_text"
                        android:textColor="@color/grey_menue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/openicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/checked"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lite_grayline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/closefilterlinear"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="9.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/contact_closed"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/contact_closed"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/closeTaskId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/contact_closed"
                        android:text="@string/closed_text"
                        android:textColor="@color/grey_menue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/closedicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/checked"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lite_grayline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/junkfilterlinear"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/contact_junk"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/contact_junk"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/junkTaskId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/contact_junk"
                    android:text="@string/junk_text"
                    android:textColor="@color/grey_menue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/junkicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/checked"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/contactAssignIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/checked"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_weight="9.5"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:gravity="bottom"
                android:text="@string/otherslablet"
                android:textColor="@color/grey_menue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_darkgra" />

        <LinearLayout
            android:id="@+id/synclinear"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="6.5"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/contact_sync"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/contact_sync"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/synclableId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/contact_sync"
                    android:padding="5dp"
                    android:text="@string/synclable"
                    android:textColor="@color/grey_menue"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lite_grayline"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/relativeFaq"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="9.5"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/contact_support"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/contact_support"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/contact_support"
                    android:text="@string/txtfaql"
                    android:textColor="@color/grey_menue"
                    android:textSize="14sp" />
            </RelativeLayout>
</LinearLayout>
<ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lite_grayline"
            android:visibility="visible" />
            <LinearLayout
                android:id="@+id/mxExchangeSettingLayout"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="9.5"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/msExchangeSetting"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/contact_support"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/msExchangeSetting"
                        android:text="MS-Exchnage Settings"
                        android:textColor="@color/grey_menue"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

</ScrollView>