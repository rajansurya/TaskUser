<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="pagebackground" parent="android:Theme.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="pagebackground2" parent="android:Theme.Light">
        <item name="android:background">@drawable/gray_strip</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="DialogWithNoTitle" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SwitchText">
        <item name="android:paddingLeft">8px</item>
        <item name="android:paddingBottom">8px</item>
        <item name="android:textColor">#FFeeFFee</item>
        <item name="android:textSize">24dip</item>
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="mySwitchStyle">
        <item name="track">@drawable/switch_track_green</item>
        <item name="thumb">@drawable/background_fenced</item>
        <item name="switchTextAppearanceAttrib">@style/mySwitchTextAppearance</item>
        <item name="textOn">ON</item>
        <item name="textOff">OFF</item>
        <item name="pushStyle">false</item>
        <item name="textOnThumb">true</item>
        <item name="thumbExtraMovement">0dp</item>
        <item name="thumbTextPadding">6dp</item>
        <item name="trackTextPadding">6dp</item>
        <item name="switchMinWidth">69dp</item>
        <item name="switchMinHeight">36dp</item>
        <item name="switchPadding">6dp</item>
    </style>

    <style name="mySwitchTextAppearance">
        <item name="textColor">#00000000</item>
        <item name="textColorHighlight">#00000000</item>
        <item name="textColorHint">#00000000</item>
        <item name="textColorLink">#00000000</item>
        <item name="textSize">16sp</item>
        <item name="textStyle">normal</item>
    </style>

    <!-- Vishesh -->
    <style name="DialogAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/summery_popup_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/summery_popup_exit_anim</item>
    </style>
    
    <style name="CustomDialogAnimation" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/DialogAnimation.Window</item>
        <!-- android.R.style.Theme_Translucent_NoTitleBar -->
    </style>
    
    <style name="SliderMenuDialogAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_left_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_left_exit_anim</item>
    </style>
    
    <style name="SliderMenuDialogAnimation" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/SliderMenuDialogAnimation.Window</item>
        <!-- android.R.style.Theme_Translucent_NoTitleBar -->
    </style>
</resources>